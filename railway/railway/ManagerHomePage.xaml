<Window x:Class="railway.ManagerHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:railway"
        mc:Ignorable="d"
        Title="ManagerHomePage" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
        <Grid>


            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
            </Grid.ColumnDefinitions>


            <TabControl TabStripPlacement="Left" Grid.Row="0" Grid.ColumnSpan="2" SelectionChanged="TabControl_SelectionChanged">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <ContentPresenter Content="{TemplateBinding Content}">
                                    </ContentPresenter>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Padding" Value="3" />
                    </Style>
                </TabControl.Resources>

                <TabItem Header="Mesečni izveštaj" Height="50"  Width="150" FontSize="20">
                    <!--  <Label Content="Content goes here..." />   -->
                    <Frame x:Name="page1" NavigationUIVisibility="Hidden" Margin="2,2,2,2"  Grid.Row="0" Grid.ColumnSpan="2"/>
                </TabItem>
                <TabItem Header="Linijski izveštaj" Height="50" Width="150" FontSize="20">
                    <Frame x:Name="page2" NavigationUIVisibility="Hidden" Margin="2,2,2,2"  Grid.Row="0" Grid.ColumnSpan="2"/>
                </TabItem>

                <TabItem Header="Red vožnje" Height="50" Width="150" FontSize="20">
                    <Frame x:Name="page3" NavigationUIVisibility="Hidden" Margin="2,2,2,2"  Grid.Row="0" Grid.ColumnSpan="2"/>
                </TabItem>


                <TabItem Header="Mrežna linija" Height="50" Width="150" FontSize="20">
                    <Frame x:Name="page4" NavigationUIVisibility="Hidden" Margin="2,2,2,2"  Grid.Row="0" Grid.ColumnSpan="2"/>
                </TabItem>
                <TabItem Header="Vozovi" Height="50" Width="150" FontSize="20">
                    <Frame x:Name="page5" NavigationUIVisibility="Hidden" Margin="2,2,2,2"  Grid.Row="0" Grid.ColumnSpan="2"/>
                </TabItem>

                <TabItem x:Name="help" Header="Pomoć" Height="50" Width="150" FontSize="20" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom">
                    <Frame x:Name="page6" NavigationUIVisibility="Hidden" Margin="2,2,2,2"  Grid.Row="0" Grid.ColumnSpan="2"/>
                </TabItem>

            </TabControl>

        </Grid>
    </ScrollViewer>
</Window>
