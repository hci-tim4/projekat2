                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Tura: " Margin="2,2,2,2"></TextBlock>
                                    <TextBlock Text="{Binding Path=Name}" Margin="2,2,2,2"/>
                                <Button ToolTip="Izmenite vreme polaska i dolaska" x:Name="btnUpdate" Click="btnUpdate_Click" Content="Izmeni" Tag="{Binding Path=Name}" Margin="2,2,2,2" l:HelpProvider.HelpKey="btnUpdateSchedule"/>
