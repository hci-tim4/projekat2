                    <DataGridTemplateColumn Header="Izmeni">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!--        <DataGridCell l:HelpProvider.HelpKey="btnChangeDays">  -->
                                <Button ToolTip="Izmenite dane kojima saobraća linija" x:Name="btnChangeDays" Click="btnChangeDays_Click" Content="Vozni dani" Tag="{Binding Path=drivingLineId}" l:HelpProvider.HelpKey="btnChangeDays"/>
                                <!--         </DataGridCell>   -->
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>


                    <DataGridTemplateColumn Header="Dodaj">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <!--      <DataGridCell l:HelpProvider.HelpKey="btnAddSchedule">   -->
                                <Button ToolTip="Dodajte novi raspored vožnje" x:Name="btnAdd" Click="btnAdd_Click" Content="Dodaj" Tag="{Binding Path=drivingLineId}" l:HelpProvider.HelpKey="btnAddSchedule" />
