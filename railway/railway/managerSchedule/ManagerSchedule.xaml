        <DataGrid  AlternatingRowBackground="Gainsboro" AlternationCount="1"
                       ItemsSource="{Binding Path=Studenti}"
                  SelectionUnit="FullRow" SelectionMode="Single" AutoGenerateColumns="False"
                  Name="dataGridStationSchedule" ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                   Grid.Row="0" Grid.Column="1" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="20"
                   CanUserAddRows="False"
                     Background="White" CanUserSortColumns="False" RenderTransformOrigin="0.997,0.431" l:HelpProvider.HelpKey="error">

            <DataGrid.Columns>
                <DataGridTextColumn  MinWidth="60" Header="Stanica" Binding="{Binding Path=StationName}" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Dolazak">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate >
                   <!--         <DataGridCell l:HelpProvider.HelpKey="ArrivalTime">   -->
                            <TextBox Text="{Binding Path=ArrivalTime, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}" l:HelpProvider.HelpKey="ArrivalTime"/>
                    <!--        </DataGridCell>    -->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Polazak">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate >
                     <!--       <DataGridCell  l:HelpProvider.HelpKey="DepartureTime">   -->
                            <TextBox Text="{Binding Path=DepartureTime, Mode=TwoWay,  UpdateSourceTrigger=PropertyChanged}" l:HelpProvider.HelpKey="DepartureTime"/>
                     <!--       </DataGridCell>   -->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

