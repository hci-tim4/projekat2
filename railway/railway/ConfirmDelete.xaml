<Window x:Class="railway.ConfirmDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:railway"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="/icon/trainIcon.png"
        Title="ŽELEZNICE SRBIJE"  Height="150" Width="400">
    <StackPanel>
        <Label FontSize="20" Margin="5" Foreground="DodgerBlue">Da li ste sigurni da hoćete da obrišete?</Label>
        <DockPanel Margin="5,15,5,0">
        <Button FontSize="20" MinHeight="35" Width="150" DockPanel.Dock="Left" x:Name="cancel" Click="Cancel_OnClick">Odustani</Button>
            <Button FontSize="20" MinHeight="35" HorizontalAlignment="Right" Width="150" DockPanel.Dock="Right" x:Name="ok" Click="Ok_OnClick">Potvrdi</Button>
        </DockPanel>
    </StackPanel>
</Window>
