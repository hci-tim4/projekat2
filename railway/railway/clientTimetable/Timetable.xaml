<Page x:Class="railway.clientTimetable.Timetable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:railway.clientTimetable"
      mc:Ignorable="d" 
      
      Title="Timetable" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel  Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#be4249">
            <Label FontSize="30"  Content="Polazište: "></Label>
            <!-- <TextBox Margin="2,2,2,2" Width="100" FontSize="30"  Padding="2"></TextBox>  -->
            <ComboBox Name="cmbDeparture" IsEditable="True"  Width="120"  FontSize="20" SelectionChanged="cmbDeparture_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Label Margin="2,2,2,2" Padding="2" FontSize="30" Content="Odredište"></Label>
            <!-- <TextBox Margin="2,2,2,2" Width="100" FontSize="30" Padding="2"></TextBox>   -->

            <ComboBox Name="cmbArrival" IsEditable="True" Width="120" FontSize="20" SelectionChanged="cmbArrival_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <Label Margin="2,2,2,2" Padding="2" FontSize="30" Content="Datum"></Label>
            <DatePicker SelectedDate="{Binding Path=date, Mode=TwoWay}"  x:Name="inputDate" FirstDayOfWeek="Monday" SelectedDateChanged="selectedDate_SelectedDateChanged" Text="SEEEEELEEECT"/>
            <Button Margin="2,2,2,2" Padding="2" FontSize="30" Content="Pretraži" Click="btn_search"></Button>

        </StackPanel>


        <!-- tabela -->



        <DataGrid  AlternatingRowBackground="Gainsboro" AlternationCount="1"
                   ItemsSource="{Binding Path=Values }" Width="360" ColumnWidth="180"
                  SelectionUnit="FullRow" SelectionMode="Single" AutoGenerateColumns="False"
                   IsReadOnly="True" Name="dataGrid" ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                   Grid.Row="1"  Background="#EEE2DC" CanUserSortColumns="False" RenderTransformOrigin="0.997,0.431">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Polazište"/>
                <DataGridTextColumn Header="Odredište"/>
                <DataGridTextColumn  Header="Date (dd.MM.yyyy. HH:mm)"/>
                <!-- Binding="{Binding Path=Date, Converter={local:DateTimeToStringConverter}}"  -->
                <DataGridTextColumn Header="Vreme"/>
                <DataGridTextColumn Header="Voz"/>
            </DataGrid.Columns>

        </DataGrid>

        <Frame x:Name="page" NavigationUIVisibility="Hidden" Margin="2,2,2,2"  Grid.Row="1"/>


    </Grid>
</Page>
